# 구글기반 이미지 자동 크롤링
# 유튜브 조코딩 따라하기

from selenium import webdriver
from selenium.webdriver.common.keys import Keys
import time
import urllib.request

driver = webdriver.Chrome()
driver.get("https://www.google.co.kr/imghp?hl=ko&ogbl")
elem = driver.find_element_by_name("q")
elem.clear()
# sctionChains(driver).key_down(Keys.SHIFT).send_keys('c').key_up(Keys.SHIFT).perform()
elem.send_keys("매드몬스터")
elem.send_keys(u'\ue006')
# 스크롤 내리는 코드 스크롤을 내려놔야 imgs에 모든 이미지들이 리스트로 들어감
# 구글은 일정이미지 이상은 스크롤을 내려야 자동으로 로딩
# 최대 스크롤까지 내려가면 이미지 더보기 버튼 눌러줘야함
# 결과더보기 클래스=.mye4qd
SCROLL_PAUSE_TIME = 1

# Get scroll height
# 자바스크립트 코드로 브라우저 높이를 찾음
last_height = driver.execute_script("return document.body.scrollHeight")

while True:
    # Scroll down to bottom
    driver.execute_script("window.scrollTo(0, document.body.scrollHeight);")

    # Wait to load page
    time.sleep(SCROLL_PAUSE_TIME)

    # Calculate new scroll height and compare with last scroll height
    new_height = driver.execute_script("return document.body.scrollHeight")
    if new_height == last_height:
        try:
            driver.find_element_by_css_selector(".mye4qd").click()
        except:
            break
    last_height = new_height

####################################3
imgs=driver.find_elements_by_css_selector(".rg_i.Q4LuWd")
count=1
for img in imgs:
    img.click()
    time.sleep(3)
    url=driver.find_element_by_css_selector(".n3VNCb").get_attribute("src")
    img_name=f"madmonster{count}.jpg"
    urllib.request.urlretrieve(url,"madmonster/"+img_name)
    count=count+1

# cURL은 command line 기반의 웹 요청 도구. download, upload가능
# os.system("curl "+url+" > madmonster.jpg")



